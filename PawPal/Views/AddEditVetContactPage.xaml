<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PawPal.ViewModel"
             x:DataType="vm:AddVetContactViewModel"
             x:Class="PawPal.Views.AddEditVetContactPage"
             Title="Add/Edit Vet Contact">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Label Text="Vet Contact Details" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Padding="5" />

            <!-- Name -->
            <Label Text="Vet Name" FontAttributes="Bold" />
            <Entry x:Name="NameEntry" Placeholder="Enter vet's name" Text="{Binding Name}" />

            <!-- Phone Number -->
            <Label Text="Phone Number" FontAttributes="Bold" />
            <Entry x:Name="PhoneEntry" Placeholder="Enter phone number" Keyboard="Telephone" Text="{Binding Phone}" />

            <!-- Email -->
            <Label Text="Email" FontAttributes="Bold" />
            <Entry x:Name="EmailEntry" Placeholder="Enter email address" Keyboard="Email" Text="{Binding Email}" />

            <!-- Address -->
            <Label Text="Address" FontAttributes="Bold" />
            <Entry x:Name="AddressEntry" Placeholder="Enter address" Text="{Binding Address}" />

            <!-- Notes -->
            <Label Text="Notes (Optional)" FontAttributes="Bold" />
            <Editor x:Name="NotesEditor" Placeholder="Enter additional details" HeightRequest="100" Text="{Binding Notes}" />

            <!-- Save Button -->
            <Button Text="Save Contact"
                    Command="{Binding SaveTaskCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="12"
                    FontSize="18"
                    HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
