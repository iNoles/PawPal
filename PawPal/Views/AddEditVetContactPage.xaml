<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PawPal.ViewModel"
             x:DataType="vm:AddVetContactViewModel"
             x:Class="PawPal.Views.AddEditVetContactPage"
             Title="Add/Edit Vet Contact">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">
            <Entry x:Name="NameEntry" Placeholder="Vet Name" Text="{Binding Name}"/>
            <Entry x:Name="PhoneEntry" Placeholder="Phone Number" Keyboard="Telephone" Text="{Binding Phone}" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" Text="{Binding Email}" />
            <Entry x:Name="AddressEntry" Placeholder="Address" Text="{Binding Address}"/>
            <Editor x:Name="NotesEditor" Placeholder="Notes (Optional)" HeightRequest="100" Text="{Binding Notes}" />

             <!-- Save Button -->
            <Button Text="Save Task"
                    Command="{Binding SaveTaskCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>