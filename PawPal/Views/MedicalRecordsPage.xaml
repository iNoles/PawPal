<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PawPal.ViewModel"
             xmlns:models="clr-namespace:PawPal.Models"
             x:Class="PawPal.Views.MedicalRecordsPage"
             x:DataType="vm:MedicalRecordsViewModel"
             Title="Medical Records">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="Medical Records"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Selected Pet Info -->
            <Label Text="Manage medical records for the selected pet."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <!-- Medical Records List -->
            <CollectionView ItemsSource="{Binding MedicalRecords}"
                            SelectedItem="{Binding SelectedMedicalRecord, Mode=TwoWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MedicalRecord">
                        <Border Stroke="Gray" StrokeThickness="1" Padding="10" Margin="5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Border.Triggers>
                                <!-- Change background color when item is selected -->
                                <DataTrigger TargetType="Border" Binding="{Binding IsSelected, Source={RelativeSource AncestorType={x:Type CollectionView}}}" Value="True">
                                    <Setter Property="BackgroundColor" Value="LightGray" />
                                </DataTrigger>
                            </Border.Triggers>
                            <VerticalStackLayout Spacing="10">
                                <Label Text="{Binding RecordType}" FontAttributes="Bold" FontSize="16" />
                                <Label Text="Date: {Binding RecordDate, StringFormat='{0:MMM dd, yyyy}'}" FontSize="12" TextColor="Gray" />
                                <Label Text="Notes: {Binding Notes}" FontSize="12" />
                                <Label Text="Prescriptions: {Binding Prescriptions}" FontSize="12" />
                                <Label Text="Doctor: {Binding Doctor}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Form for Adding/Updating Medical Records -->
            <Border Stroke="Gray" StrokeThickness="1" StrokeShape="RoundRectangle" Padding="20" IsVisible="{Binding IsFormVisible}" BackgroundColor="LightYellow">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Add/Update Medical Record" FontSize="18" FontAttributes="Bold" />

                   <Border Stroke="LightGray"  StrokeThickness="1" Padding="10" Margin="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <Entry
                            Placeholder="Record Type (e.g., Vaccination, Checkup)" 
                            Text="{Binding EditableMedicalRecord.RecordType}" />
                    </Border>
                    
                    <Border Stroke="LightGray" StrokeThickness="1" Padding="0"  Margin="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <Editor
                            Placeholder="Notes" 
                            Text="{Binding EditableMedicalRecord.Notes}"
                            AutoSize="TextChanges" />
                    </Border>
                    
                    <Border Stroke="LightGray" StrokeThickness="1" Padding="10"  Margin="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <Entry
                            Placeholder="Prescriptions (if any)"
                            Text="{Binding EditableMedicalRecord.Prescriptions}" />
                    </Border>
                    
                    <Border Stroke="LightGray" StrokeThickness="1" Padding="10"  Margin="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <Entry
                            Placeholder="Doctor's Name"
                            Text="{Binding EditableMedicalRecord.Doctor}"/>
                    </Border>

                    <DatePicker Date="{Binding EditableMedicalRecord.RecordDate}" />

                    <Grid ColumnDefinitions="*, *, *" HorizontalOptions="Fill" RowSpacing="10" ColumnSpacing="10">
                        <Button Text="Save" 
                                Command="{Binding SaveMedicalRecordCommand}" 
                                Grid.Column="0" 
                                BackgroundColor="LightGreen" 
                                BorderColor="Gray" 
                                CornerRadius="8" />

                        <Button Text="Cancel" 
                                Command="{Binding CancelEditCommand}" 
                                Grid.Column="1" 
                                BackgroundColor="LightGray" 
                                BorderColor="Gray" 
                                CornerRadius="8" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*, *, *" HorizontalOptions="Fill" RowSpacing="10" ColumnSpacing="10">
                <Button Text="Add Record"
                    Command="{Binding AddMedicalRecordCommand}"
                    Grid.Column="0"
                    BackgroundColor="SkyBlue"
                    BorderColor="Gray"
                    CornerRadius="8" />
                <Button Text="Update Record"
                    Command="{Binding UpdateMedicalRecordCommand}" 
                    Grid.Column="1"
                    BackgroundColor="LightYellow"
                    BorderColor="Gray"
                    CornerRadius="8"
                    IsEnabled="{Binding SelectedMedicalRecord, Converter={StaticResource NullToBoolConverter}}" />
                <Button Text="Delete Record"
                    Command="{Binding DeleteMedicalRecordCommand}"
                    Grid.Column="2"
                    BackgroundColor="LightCoral"
                    BorderColor="Gray"
                    CornerRadius="8"
                    IsEnabled="{Binding SelectedMedicalRecord, Converter={StaticResource NullToBoolConverter}}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
