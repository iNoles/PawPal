<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PawPal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PawPal"
    Shell.FlyoutBehavior="Disabled"
    Title="PawPal">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Pet Profile"
        Route="profile"
        ContentTemplate="{DataTemplate local:PetProfilePage}" />

    <!-- Add Task -->
    <ShellContent
        Title="Add Task"
        ContentTemplate="{DataTemplate local:AddTaskPage}"
        Route="AddTaskPage" />
</Shell>
