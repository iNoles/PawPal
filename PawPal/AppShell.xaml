<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PawPal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PawPal"
    Title="PawPal">

    <!-- TabBar for the main tabs -->
    <TabBar>
        <!-- Home Tab -->
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate local:MainPage}" />
        <!-- Calendar Tab -->
        <ShellContent Title="Calendar"
                      ContentTemplate="{DataTemplate local:CalendarPage}" />
        <!-- Add Task Tab -->
        <ShellContent Title="Add Task"
                      ContentTemplate="{DataTemplate local:TaskPage}" />
    </TabBar>
</Shell>
