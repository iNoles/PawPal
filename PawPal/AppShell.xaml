<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PawPal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PawPal"
    xmlns:views="clr-namespace:PawPal.Views"
    Title="PawPal">

    <!-- TabBar for the main tabs -->
    <TabBar>
        <!-- Home Tab -->
        <Tab Title="Home">
            <ShellContent Route="HomePage" ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <!-- Calendar Tab -->
        <Tab Title="Calendar">
             <ShellContent Route="CalendarPage" ContentTemplate="{DataTemplate views:CalendarPage}" />
        </Tab>
        <!-- Add Task Tab -->
        <Tab Title="Add Task">
             <ShellContent Route="AddTaskPage" ContentTemplate="{DataTemplate views:TaskPage}" />
        </Tab>
        <!-- Vet Contacts Tab -->
        <Tab Title="Vet Contacts">
            <ShellContent Route="VetContactsPage" ContentTemplate="{DataTemplate views:VetContactsPage}" />
        </Tab>
    </TabBar>
</Shell>
